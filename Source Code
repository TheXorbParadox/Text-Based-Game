using System;

namespace Text_based_game
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Hello There! Do you want to play a game? If yes, then press y");

            if(Console.ReadKey().KeyChar.ToString()=="y")
            {
            Console.WriteLine("\nJohn saw those demons that were chasing him from behind, he gathered some courage and asked them-");
            Console.WriteLine("\nWhy do you want to kill me?");
            Console.ReadKey();
            Console.WriteLine("\nDemons: You woke us up from our beautiful sleep, and now you shall die!");
            Console.ReadKey();
            Console.WriteLine("\nJohn: Please forgive me for my mistake, I will do whatever you tell me to do if you just let me go");
            Console.ReadKey();
            Console.WriteLine("\nDemons: Fine, we will let you go, but there is something you need to do.");
            Console.ReadKey();
            Console.WriteLine("\nJohn: Yes, I will do anything");
            Console.ReadKey();
            Console.WriteLine("\nDemons: Do you see that small village?");
            Console.ReadKey();
            Console.WriteLine("\nJohn: Yes.");
            Console.ReadKey();
            Console.WriteLine("\nDemons: Go and burn that village to ashes and all the people living their. You have 24 hours");
            Console.ReadKey();
            Console.WriteLine("\nJohn: WH..wh..What...no no I can't do that, I can't kill all those innocent people.");
            Console.ReadKey();
            Console.WriteLine("\nDemons: Do that or you shall die");
            Console.ReadKey();
            Console.WriteLine("\nTo go and burn the village, press b or if you don't want to follow the demons' orders, press n");
            if(Console.ReadKey().KeyChar.ToString()=="b")
            {
                Console.WriteLine("\nJohn: Okay, I will do as you wish");
                Console.ReadKey();
                Console.WriteLine("\nJohn goes towards the village in the evening, slowly and shaking like the centre of the earth while the demons smile at him from behind");     
                Console.ReadKey();
                Console.WriteLine("\nJohn reaches the village and he explores it and sees small houses whose rooves he could reach easily");
                Console.ReadKey(); 
                Console.WriteLine("\nAnd the people were all joyos as every, they looked like the happies people in the world not knowing there fate");
                Console.ReadKey();    
                Console.WriteLine("\nHe thinks to himself, Why am I doing this? Should I even do this? Do they even deserve it? Does my life worth more than there's? ");
                Console.ReadKey();
                Console.WriteLine("\nJohn waits for eveybody to go to sleep, then burn the village");
                Console.ReadKey();
                Console.WriteLine("\nSoon at a distance, he sees a torch of fire, he follows it and picks it up.");
                Console.ReadKey();
                Console.WriteLine("\nAnd then he thinks, this should be able to burn these houses! And procedes to burn the village");
                Console.ReadKey();
                Console.WriteLine("\nAnd then he goes near a house and then he takes his torch near it's roof and then he lights it, and it catches fi-");
                Console.ReadKey();
                Console.WriteLine("\nGood morning John! Wake up or you'll be late for school.");
                Console.ReadKey();
                Console.WriteLine("\nJohn (thinking): Thank god it was a dream");
            }
            else if(Console.ReadKey().KeyChar.ToString()=="n")
            {
                Console.WriteLine("\nNo I will not do that");
                Console.ReadKey();
                Console.WriteLine("\nDemons: Then you shall die!");
                Console.ReadKey();
                Console.WriteLine("\nJohn: no...no... no no no n-!");
                Console.ReadKey();
                Console.WriteLine("\nAnd you were killed by the demons while you were screaming for your life");
                Console.ReadKey();
            }
            }
        }
    }
}
